{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist/server",
    "rootDir": ".",
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "strict": true
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "client"
  ]
}